<section class="hero is-link is-small">
    <div class="hero-body">
        <div class="container has-text-centered">
        <p class="title">
            Sign Up
        </p>
        <p class="subtitle">
            now to use FlyMsg
        </p>
        </div>
    </div>
</section>


<div class="mt-5">
    <%= form_with do |form| %>        

      <div class="has-text-centered mt-5" style="margin: 0 26rem">
          <div class="field">
              <p class="control has-icons-left">
                  <%= form.text_field :first_name, class: "input", placeholder: "First Name" %>
                  <span class="icon is-small is-left">
                  <i class="fa fa-user"></i>
                  </span>
              </p>
          </div>
      </div>

      <div class="has-text-centered mt-5" style="margin: 0 26rem">
          <div class="field">
              <p class="control has-icons-left">
                  <%= form.text_field :last_name, class: "input", placeholder: "Last Name" %>
                  <span class="icon is-small is-left">
                  <i class="fa fa-user"></i>
                  </span>
              </p>
          </div>
      </div>

      <div class="has-text-centered mt-5" style="margin: 0 26rem">
          <div class="field">
              <p class="control has-icons-left">
                  <%= form.email_field :email, class: "input", placeholder: "Email" %>
                  <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                  </span>
              </p>
          </div>
      </div>

      <div class="has-text-centered mt-5" style="margin: 0 26rem">
          <div class="field">
              <p class="control has-icons-left">
                  <%= form.password_field :pwd, class: "input", placeholder: "New Password" %>
                  <span class="icon is-small is-left">
                  <i class="fa fa-key"></i>
                  </span>
              </p>
          </div>
      </div>

      <div class="has-text-centered mt-5">
          <div class="field">
              <p class="control">
                  <%= form.submit "Sign Up", class: "button is-primary is-medium is-rounded" %>
              </p>
          </div>
      </div>

    <% end %>
    
</div>
