<section class="hero is-link is-small">
    <div class="hero-body">
        <div class="container has-text-centered">
        <p class="title">
            Image Encrypted!
        </p>
        <p class="subtitle">
            You can download your encrypted image now and share it...
        </p>
        </div>
    </div>
</section>

<div class="mt-5 is-flex" style="justify-content: center">
    <%= image_tag('data:image/png;base64,' + @file_data, class: "img-responsive") %>
</div>

<div class="my-5">
    <%= form_with url: "/download", method: :post do |form| %>
        <%= form.hidden_field :file_name, value: @file_name %>

        <div class="has-text-centered mt-5">
            <div class="field">
                <p class="control">
                    <%= form.submit "Download", class: "button is-primary is-medium is-rounded" %>
                </p>
            </div>
        </div>

    <% end %>

</div>
